<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.pertamina.brightgasapp"
    android:targetSandboxVersion="1"
    tools:targetApi="o">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".view.activity.EmailSentActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.ForgotPassword"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.ProductListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.CompleteRegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.ReceiverActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.OrderActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.OrderCompleteActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.SummaryActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.CompleteDataActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.OrderData"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.FakeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.GenuineActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.MasterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.TermConditionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.PrivacyPolicyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>