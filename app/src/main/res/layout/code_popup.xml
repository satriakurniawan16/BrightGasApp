<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/createSingleDealBut"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:background="@color/colorPrimary"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#F4C1D2"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="176dp"
                android:src="@drawable/code_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="QR Code tidak terbaca"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Masukkan short link yang tertera pada bagian atas sealcap untuk melakukan pengecekan status."
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/otp_view"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:hint="@string/s_id_42_rk"
                android:textAlignment="center"
                android:textColorHint="#80FFFFFF"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/submit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorWhite"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>